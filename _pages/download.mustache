<div class="hero">
	<div class="container">

		<div class="cdn">
			<h4>CDN:</h4>
			<div class="input">
				<select name="library" id="library">
					<option value="JQuery">JQuery</option>
					<option value="Zepto">Zepto</option>
					<option value="Dojo">Dojo</option>
					<option value="Mootools">Mootools</option>
					<option value="YUI">YUI</option>
				</select>
				<span></span>
			</div>

		</div>

		<div class="pull-right download-wrapper">
			<a class="download-link" href="{{urls.github}}/archive/v{{defaultDownloadVersion}}.zip">
				<button class="download">Download {{defaultDownloadVersion}} <span>(One file. Everything you need.)</span></button>
			</a>
			<div id="version-download-customizer"></div>
			<p class="button-desc">Download for:
				<a href="{{url.builder}}?configuration=jquery">jQuery</a> |
				<a href="{{url.builder}}?configuration=zepto">Zepto</a> |
				<a href="{{url.builder}}?configuration=mootools">Mootools</a> |
				<a href="{{url.builder}}?configuration=dojo">Dojo</a> |
				<a href="{{url.builder}}?configuration=yui">YUI</a>
			</p>
		</div>
	</div>
</div>
